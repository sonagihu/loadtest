[설명] CRUD 작업을 수행하는 서비스 클래스의 코드 리뷰

다음 CRUD 작업을 수행하는 서비스 클래스에 대한 코드 리뷰를 작성해줘:
```java
public class UserService {
    private final List<User> users = new ArrayList<>();
    
    public void createUser(String id, String name, String email) {
        User user = new User(id, name, email);
        users.add(user);
    }
    
    public User getUser(String id) {
        for (User user : users) {
            if (user.getId().equals(id)) {
                return user;
            }
        }
        return null;
    }
    
    public void updateUser(String id, String name, String email) {
        User user = getUser(id);
        if (user != null) {
            user.setName(name);
            user.setEmail(email);
        }
    }
    
    public void deleteUser(String id) {
        User user = getUser(id);
        if (user != null) {
            users.remove(user);
        }
    }
    
    public List<User> searchUsers(String keyword) {
        List<User> results = new ArrayList<>();
        for (User user : users) {
            if (user.getName().contains(keyword) || user.getEmail().contains(keyword)) {
                results.add(user);
            }
        }
        return results;
    }
}

class User {
    private String id;
    private String name;
    private String email;
    
    public User(String id, String name, String email) {
        this.id = id;
        this.name = name;
        this.email = email;
    }
    
    // Getters and setters
} 